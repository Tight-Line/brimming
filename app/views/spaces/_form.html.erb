<%= form_with model: space, class: "space-form" do |f| %>
  <% if space.errors.any? %>
    <div class="form-errors">
      <h3><%= pluralize(space.errors.count, "error") %> prevented this space from being saved:</h3>
      <ul>
        <% space.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: true,
        placeholder: "Enter space name",
        maxlength: 100 %>
    <small class="form-hint">A short, descriptive name for the space</small>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control",
        rows: 4,
        placeholder: "Describe what this space is for..." %>
    <small class="form-hint">Optional description to help users understand the purpose of this space</small>
  </div>

  <div class="form-group">
    <%= f.label :qa_wizard_prompt, "Q&A Wizard Prompt" %>
    <%= f.text_area :qa_wizard_prompt, class: "form-control",
        rows: 10,
        placeholder: "Custom prompt for Q&A wizard generation (optional)..." %>
    <small class="form-hint">
      Custom system prompt for the Q&A Wizard. Leave blank to use the default prompt.<br>
      Supported variables: <code>{{SPACE_NAME}}</code>, <code>{{SPACE_DESCRIPTION}}</code>, <code>{{RAG_CONTEXT}}</code>
    </small>
  </div>

  <div class="form-group">
    <%= f.label :rag_chunk_limit, "RAG Chunk Limit" %>
    <%= f.number_field :rag_chunk_limit, class: "form-control form-control-narrow",
        min: 1, max: 50,
        placeholder: SearchSetting.rag_chunk_limit %>
    <small class="form-hint">
      Number of content chunks to retrieve for AI-generated answers. Leave blank to use the global default (<%= SearchSetting.rag_chunk_limit %>).
    </small>
  </div>

  <div class="form-group">
    <%= f.label :similar_questions_limit, "Similar Questions Limit" %>
    <%= f.number_field :similar_questions_limit, class: "form-control form-control-narrow",
        min: 0, max: 10,
        placeholder: SearchSetting.similar_questions_limit %>
    <small class="form-hint">
      Number of similar existing questions to show in Q&A Wizard. Set to 0 to disable. Leave blank to use the global default (<%= SearchSetting.similar_questions_limit %>).
    </small>
  </div>

  <div class="form-actions">
    <%= f.submit space.persisted? ? "Update Space" : "Create Space", class: "btn btn-primary" %>
    <%= link_to "Cancel", space.persisted? ? space_path(space) : spaces_path, class: "btn btn-secondary" %>
  </div>
<% end %>

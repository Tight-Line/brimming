<%= turbo_stream.replace "subscription-#{@space.id}-#{@mapping.id}" do %>
  <%= render "settings/subscriptions/subscription_item", sub: {
    space: @space,
    source: :ldap,
    ldap_group_name: @mapping.group_pattern,
    opted_out: false,
    subscribed: current_user.subscribed_spaces.include?(@space),
    mapping: @mapping
  } %>
<% end %>

# Development container for Rails scaffolding and development
FROM ruby:3.4.7-bookworm

# Install system dependencies
RUN apt-get update -qq && \
    apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    libvips-dev \
    nodejs \
    npm \
    git \
    curl \
    vim \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Install PostgreSQL 17 client tools (to match pgvector container)
RUN curl -fsSL https://www.postgresql.org/media/keys/ACCC4CF8.asc | gpg --dearmor -o /usr/share/keyrings/postgresql-keyring.gpg && \
    echo "deb [signed-by=/usr/share/keyrings/postgresql-keyring.gpg] http://apt.postgresql.org/pub/repos/apt bookworm-pgdg main" > /etc/apt/sources.list.d/pgdg.list && \
    apt-get update -qq && \
    apt-get install -y --no-install-recommends postgresql-client-17 && \
    rm -rf /var/lib/apt/lists/*

# Install Node.js LTS (for asset pipeline)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    npm install -g yarn

# Set working directory
WORKDIR /src

# Install latest stable Rails
RUN gem install rails --no-document

# Keep container running for development
CMD ["tail", "-f", "/dev/null"]
